div.text-center
  ul.pagination.pagination-lg
    if parseInt(page) > 1
      li
        a(href=pageUrl(parseInt(page)-1)) &laquo;
    else
      li.disabled
        span &laquo;
    - var i = 1;
    - var pageCount = getPageCount();
    - while ( i <= pageCount )
      if page == i
        li.active
          a(href=pageUrl(i)) #{i}
      else
        li
          a(href=pageUrl(i)) #{i}
      - i++;
    if parseInt(page) < pageCount
      li
        a(href=pageUrl(parseInt(page)+1)) &raquo;
    else
      li.disabled
        span &raquo;
